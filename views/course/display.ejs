<table class="table table-bordered text-center carousel-shadow">
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Email</th>
    <th>Course</th>
    <th>Status</th>
    <th>Comment</th>
    <th>Action</th>
  </tr>
<% d.forEach((item,i)=>{ %>
    <tr>
        <td><%++i%>.</td>
        <td><%=item.name%></td>
        <td><%=item.email%></td>
        <td><%=item.course%></td>
        <td><%=item.status%></td>
        <td><%=item.comment%></td>
        <td>
          <a href="/courseView/<%= item._id%>" class="btn btn-success">view</a>
          <a href="/courseEdit/<%= item._id%>" class="btn btn-warning">edit</a>
          <!-- <a href="/courseDelete/<%= item._id%>" class="btn btn-danger">delete</a> -->
        </td>
      </tr>
    <% }) %>
 
</table>
</div>
